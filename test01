fdef sum(i: int, j:int) : int {
     return i + j;
}

fdef sum2(i:float, j:float) : float {
     return i + j;
}


{

  s1 : int = sum(-10,20) + 5;
  s2 : float = sum2(10.0,-20.0);
  b : bool;

  if (s1 < s2 || s1 == s2) {
     b  =  s1 + s2 / (s1 + s2) >= 30;
  } else {
     /* do something else */
  }
}